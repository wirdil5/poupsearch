{
  "manifest_version": 2,

  "name": "PopUp Search",
  "description": "This extension shows search result for the selected word in a popup window",
  "version": "0.9.1",

	"minimum_chrome_version": "40",
	
  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },
	
  "permissions": [
    "activeTab",
		"storage"
  ],
	
	"icons": {"48": "icon48.png",
						"128": "icon128.png" },
	
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js" : ["common.js", "cs.js"]
		}
	],
	
	"options_ui": {
    "page": "options.html",
    "chrome_style": true
	}
}